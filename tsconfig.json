{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "lib": ["ES2023"],

    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
  },
}
