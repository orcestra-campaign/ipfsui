{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@orcestra/*": ["./packages/*"]
    },

    "skipLibCheck": true,
    "declaration": true,

    /* prefer node, should be compatible with bundler as well */
    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",
  },
  "include": ["src/**/*.ts"],
}
