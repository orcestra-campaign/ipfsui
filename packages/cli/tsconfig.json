{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "es2022",
    "target": "es2022",
    "lib": ["esnext"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@orcestra/*": ["./packages/*"]
    },

    "skipLibCheck": true,
    "declaration": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "strict": true,

    "types": ["node", "vitest/globals"]
  },
  "include": ["src/**/*.ts"],
}
